CREATE DATABASE Cliente;
USE Cliente;

CREATE TABLE Cliente (
	IdCliente INT PRIMARY KEY,
    Nome VARCHAR(100),
    Sexo CHAR(1),
    DtaNasc DATETIME NOT NULL
    );
    
    
