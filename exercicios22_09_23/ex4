INSERT INTO Quarto
(IdQuarto, Andar, VlrDiaria, NumQuarto)
VALUES
(5, 2, 250, 75);

SELECT NumQuarto, VlrDiaria FROM Quarto
WHERE VlrDiaria BETWEEN 100 AND 400;
